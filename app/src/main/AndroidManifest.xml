<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.proverbio.android.material">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.proverbio.android.activity.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="org.proverbio.android.activity.DetailActivity"
            android:parentActivityName="org.proverbio.android.activity.HomeActivity"
            android:permission="org.proverbio.android.START_ACTIVITY">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.proverbio.android.activity.HomeActivity"/>
        </activity>
    </application>


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <permission android:name="org.proverbio.android.START_ACTIVITY" android:protectionLevel="signature"/>
</manifest>
